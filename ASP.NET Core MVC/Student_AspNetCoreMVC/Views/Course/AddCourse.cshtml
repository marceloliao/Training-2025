@{
    ViewData["Title"] = "Add a new course";
}

@model Student_AspNetCoreMVC.Models.ListViewModel;

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>New Course Form</h4>
    </div>
    <div>
        <div><a asp-controller="Course" asp-action="Index">&lt; Back</a></div>
    </div>
    <div class="panel-body">
        <form asp-controller="Course" asp-action="AddCourse" method="POST">
            <div class="form-group" hidden>
                <label asp-for="Course.CourseId" class="control-label"></label>
                <div>
                    <input asp-for="Course.CourseId" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Course Name</label>
                <div>
                    <input asp-for="Course.CourseName" class="form-control" />
                    <span asp-validation-for="Course.CourseName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="margin-top:10px" hidden>
                <label class="control-label">Teacher's First Name</label>
                <div>
                    <input asp-for="Course.TeacherFirstName" class="form-control" />
                    <span asp-validation-for="Course.TeacherFirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="margin-top:10px" hidden>
                <label class="control-label">Teacher's Last Name</label>
                <div>
                    <input asp-for="Course.TeacherLastName" class="form-control" />
                    <span asp-validation-for="Course.TeacherLastName" class="text-danger"></span>
                </div>
            </div>
            @* <div class="form-group" style="margin-top:10px">
                <label class="control-label">Selected Teacher</label>
                <div>
                    <input type="text" id="selectedTeacher" />
                </div>
            </div> *@
            <div class="form-group" style="margin-top:10px">
                <label class="control-label">Available teachers</label>
                @Html.DropDownListFor(m => m.SelectedItem, (IEnumerable<SelectListItem>)Model.Items, "Select a teacher", new { id = "dropdown" })

                @* <div> 
                    <select> 
                        @foreach (var item in Model.Items) 
                        { 
                            <option value="@item.Value">@item.Text</option> 
                        } 
                    </select> 
                </div>  *@
            </div>
            <div class="form-group" style="margin-top:10px">
                <button asp- class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    document.getElementById('dropdown').addEventListener('change', function () {
        var selectedText = this.options[this.selectedIndex].text;
        document.getElementById('selectedTeacher').value = selectedText;
    });
</script>
