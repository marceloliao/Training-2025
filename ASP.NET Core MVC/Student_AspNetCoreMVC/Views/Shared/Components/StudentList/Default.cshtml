@model IEnumerable<Student>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        <a asp-controller="Student" asp-action="DisplayRegistrationForm">Add a new student</a>
        @foreach (var student in Model)
        @* @for (int i = 1; i <= Model.Count(); i++) *@
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Age</td>

                @* Use link text instead of buttons, we can also get rid of JavasCript functions*@
                @*<td><button onclick="editRecord(@reg.Id)">Edit</button></td>*@
                @*<td><button onclick="deleteRecord(@reg.Id)">Delete</button></td>*@

                <td><a asp-controller="Student" asp-action="Edit" asp-route-id="@student.StudentId">Edit</a></td>
                <td><a asp-controller="Student" asp-action="Delete" asp-route-id="@student.StudentId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
