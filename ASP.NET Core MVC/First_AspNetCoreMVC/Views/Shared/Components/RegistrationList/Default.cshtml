@model IEnumerable<RegistrationModel>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <div><a asp-controller="Demo" asp-action="Register">Add a new record</a></div>
        @foreach(var reg in Model)
        @* @for (int i = 1; i <= Model.Count(); i++) *@
        {
            <tr>
                <td>@reg.FirstName</td>
                <td>@reg.LastName</td>
                <td>@reg.Email</td>

                @* Use link text instead of buttons, we can also get rid of JavasCript functions*@
                @*<td><button onclick="editRecord(@reg.Id)">Edit</button></td>*@
                @*<td><button onclick="deleteRecord(@reg.Id)">Delete</button></td>*@

                <td><a asp-controller="Demo" asp-action="Register" asp-route-id="@reg.Id">Edit</a></td>
                <td><a asp-controller="Demo" asp-action="Delete" asp-route-id="@reg.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<script>
    function editRecord(id) {
        window.location.href = `@Url.Action("Register", "Demo", new { id = "" })/${id}`;
    }

    function deleteRecord(id) {
        window.location.href = `@Url.Action("Delete", "Demo", new { id = "" })/${id}`;
    }
</script>


